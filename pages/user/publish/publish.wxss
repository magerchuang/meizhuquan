/* pages/user/publish/publish.wxss */
page{height:100%;width:100%;overflow: hidden}
.publish{width:100%;height:100%;}

.pub_top{padding:25rpx 25rpx 0;width: 100%;box-sizing: border-box;}
.pub_topbox{display: flex;border-bottom:1rpx solid #d6d6d6;padding-bottom:25rpx;}
.pub_topbox textarea{width:480rpx;margin-right:20rpx;height:200rpx;font-size:30rpx;}
.pub_topbox image{width:200rpx;height:200rpx;}
.publish button{width:100%;border:0;background: #ff0470;color:#fff;position: absolute;bottom:0;left:0;border-radius: 0;font-size:36rpx;height: 100rpx;line-height: 100rpx;}
.add_location{padding:25rpx;}
.add_location .addtxt{display: flex;font-size:30rpx;height:60rpx;line-height-step: 60rpx;align-items: center;position: relative;}
.add_location .addtxt image{width:25rpx;height:35rpx;margin-right:20rpx;}
.add_location .addtxt:after{content:'';position: absolute;width:15rpx;height:15rpx;border-top:2px solid #666;border-right:2px solid #666;transform:rotate(45deg) translateY(-50%);right:25rpx;top:50%;}
.add_tag{display: flex;flex-wrap: wrap;margin-top:10rpx;}
.add_tag text{padding:2rpx 10rpx;border-radius: 5rpx;border:1rpx solid #ff0470;color:#ff0470;font-size:20rpx;margin-right:20rpx;margin-bottom:20rpx;}