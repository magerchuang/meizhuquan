page{background: #f5f5f5;}
.view-layer {z-index:99;width:100%;height:100%;background-color:rgba(0, 0, 0, 0.6);position:fixed;left:0rpx;top:0rpx;}
.view-layer button{color:#fff;box-sizing: border-box;width:70%;border-radius:50rpx;font-size:30rpx;height:50px;line-height:50px;background:#ff498f;}
.my_top{background:url(http://app.hudongli.cn/Uploads/my_tbg1.jpg) no-repeat left top;background-size:100% 300rpx;width:100%;position: relative;height: 300rpx;}
