/* pages/user/oneself/companyDetail/companyDetail.wxss */
.topbox{padding:20rpx;background: #ff498f;display: flex;justify-content: space-around;}
.company{flex: 1;color:#fff;}
.company_name{font-size: 34rpx;margin-bottom:10rpx;}
.company_scale{font-size:22rpx;}
.company_logo{width:100rpx;height:100rpx;}
.company_logo image{width:100rpx;height:100rpx;}
.company_info{padding:20rpx;}
.intro_tit{font-size: 28rpx;margin-bottom:15rpx;}
.company_intro{padding-bottom: 30rpx;}
.intro_detail{font-size:22rpx;color: #999;text-indent: 2em;line-height: 1.42;padding: 0 0 10rpx;}
.intro_detail text{color:#ff498f;}
.company_pic{width:100%;overflow-x:auto;display: flex;flex-wrap: nowrap;overflow-y:hidden; }
.img_item {margin-right: 20rpx;width:380rpx;height:214rpx;}
.img_item image{width:380rpx;height:214rpx;border-radius: 20rpx;}
.img_box{padding:32rpx 0;width:380rpx;height:214rpx;box-sizing: border-box;}
.img_add{width:150rpx;height:150rpx;border:2rpx solid #D9D9D9;position: relative;}
.img_add::after,.img_add::before{content: '';position:absolute;top:50%;left:50%;    -webkit-transform: translate(-50%, -50%);transform: translate(-50%, -50%);background-color: #D9D9D9;}
.img_add::before{width:2rpx;height:50rpx;}
.img_add::after{width:50rpx;height:2rpx;}
/*去掉滚动条*/
::-webkit-scrollbar {width: 0;height: 0;color: transparent;}
.company_pv{padding-bottom:30rpx;}
.post_listtit{display: flex;justify-content: space-around;}
.post_listtit .post_zw{text-align: left;flex: 1;font-size:28rpx;color:#666;}
.post_listtit .post_money{text-align: right;color:#ff498f;font-size:28rpx;}
.post_label{padding:5rpx 0 10rpx;}
.post_label text{display: inline-block;margin-right:10rpx;padding:6rpx 15rpx;background: #e6e6e6;border-radius: 8rpx;font-size:20rpx;color:#999;}
.more{color:#ff498f;font-size:24rpx;text-align: center;padding:15rpx 0;}
.more image{width:20rpx;height:20rpx;vertical-align: middle;margin-left:10rpx;margin-top:-5rpx;}
.post_xqtit{font-size:26rpx;color:#999;padding:10rpx 0;}
.post_xqlist{overflow: hidden;}
.post_xqlist text{color:#999;font-size:26rpx;display: block;height:45rpx;line-height: 45rpx;}






















