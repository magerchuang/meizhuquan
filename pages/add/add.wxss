/* pages/enterprise/camerademo/camerademo.wxss */
page{width:100%;height:100%;}
.video{width:100%;height: 100%;position: relative;}
.photo{position: absolute;bottom:80rpx;width:100%;text-align: center;padding-top:5px;}
.takePhoto{width:120rpx;height: 120rpx;border-radius: 100%;border:10rpx solid #ff498f;padding: 10rpx;margin:0 auto;box-shadow: 0 0 5px rgba(255,73,143)}
.takePhoto .start{width:120rpx;height:120rpx;border-radius: 100%;background: #ff498f;display: block;color:#fff;line-height: 120rpx;text-align: center;font-size:28rpx;border:none;}
.takePhoto .pause{width:70rpx;height:70rpx;background: #ff498f;border-radius: 10rpx;margin:25rpx auto;color:#fff;line-height:70rpx;border:none; font-size:28rpx;}
.takePhoto_txt{color:#fff;font-size:28rpx;text-align: center;padding-top: 30rpx;}
.takePhoto_txt .txtf{font-size:36rpx;margin-bottom:10rpx;}
.camera_front{position: absolute;right:50rpx;top:15%;font-size:24rpx;color:#fff;text-align: center;}
.camera_front cover-image{width:70rpx;height:70rpx;margin-bottom:10rpx;}
.upadate{position: absolute;left:600rpx;bottom:220rpx;transform: translateX(-50%);display: flex;}
.upadate cover-image{width:70rpx;height:70rpx;margin:0 20rpx;}